---
import imageOne from '../../public/assets/img1.png'
import imageTwo from '../../public/assets/img2.png'
import imageThree from '../../public/assets/img3.png'




let cardDetails = [

{
    name: 'Heart & Sol',
    tokens: '16',
    solana: '0.3234',
    img : imageOne
},

{
    name: 'Heart & Sol',
    tokens: '16',
    solana: '0.3234',
    img : imageTwo
},

{
    name: 'Heart & Sol',
    tokens: '16',
    solana: '0.3234',
    img : imageThree
},

]
---
<section class="discover__card flex justify-center text-white">

{
    cardDetails.map(card => (
        <div class="discover__card-container border p-5">
            <div class="discover__card-image">
                <img src={card.img} alt=""/>
            </div>
            <div class="discover__card-details">
                <h3 class="text-xl font-semibold">{card.name}</h3>
                <div class="flex justify-between">
                <div class="flex ">
                     <p class="font-normal text-base">
                
    
                {card.solana}</p>
                </div>
           
                    <p class="font-normal text-base">{card.tokens} tokens </p>

                </div>
            
            </div>

            <div class="discover__card__action">
            
            <button class="rounded-full font-bold text-xl button__buynft py-2 px-3">
                <span class=" font-bold">BUY NFT</span>
            </button>


            
            </div>
        </div>
    ))
}

</section>





<style>

.button__buynft{

  
    background: linear-gradient(to right, #06DBAC, #BD00FF);
}

</style>